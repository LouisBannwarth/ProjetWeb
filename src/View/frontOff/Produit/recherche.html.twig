{% extends "layout.html.twig" %}
{% block contenu %}

    <div class="small-4 columns">
        <table>
            <caption>affiche table panier</caption>
            <tr>
                <th>nom</th>
                <th>quantite</th>
                <th>date ajout</th>
                <th>prix</th>
                <th>nom photo</th>
                <th>photo</th>
            </tr>
            {% if   app.session.get('droit') is defined and  app.session.get('droit') == 'DROITadmin' %}
                {% for produit in commande if commande is not empty %}

                    <tr>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.quantite }}</td>
                        <td>{{ produit.dateAjoutPanier }}</td>
                        <td>{{ produit.prix }}</td>
                        <td>
                            {{ produit.photo }}</td>
                        <td>
                            <img style="width:40px;height:40px" src="{{ asset('images/') }}{{ produit.photo }}"
                                 alt="image de {{ produit.nom }}">
                        </td>

                    </tr>

                {% endfor %}

            {% endif %}

            <tbody>
        </table>
    </div>
    </div>

{% endblock %}