{% extends "layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{ path('user.validFormlogin') }}">

        <div class="row">

            <fieldset>
                <legend>Espace de connexion</legend>
                <label>Login :
                        <input class="log" name="login"  type="text"  size="18" value="" />
                </label>

                <label class="password">Password :
                    <input name="password"  type="password"  size="18" value="" />
                </label>
                {% if app.session.get('erreur') is not empty %}
                    <small class="error">{{ app.session.get('erreur') }}</small>
                {% endif %}

                <input type="submit" name="seConnecter" value="Se connecter" />
	        </fieldset>
        </div>
</form>

{% endblock %}
