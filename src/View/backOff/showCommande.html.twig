{% extends "layout.html.twig" %}
{% block contenu %}

    <div class="small-4 columns">
        <table>
            <caption>affiche table commande</caption>
            <tr>
                <th>id</th>
                <th>user_id</th>
                <th>nom</th>
                <th>date ajout</th>
                <th>prix</th>
                <th>etat</th>
                <th>control</th>

            </tr>
            {% if   app.session.get('droit') is defined and  app.session.get('droit') == 'DROITadmin' %}
                {% for data in commande if commande is not empty %}

                    <tr>
                        <td>{{ data.id }}</td>
                        <td>{{ data.user_id }}</td>
                        <td>{{ data.nom }}</td>
                        <td>{{ data.date_achat }}</td>
                        <td>{{ data.prix }}</td>
                        <td>{{ data.libelle }}</td>
                        <td>
                        {% if data.etat_id==1 %}
                            <a href="{{ path('produit.editCommande', {id: data.id}) }}">Expedier</a>
                        {% endif %}
                        </td>
                        <td><a href="{{ path('produit.afficheCommande', {id: data.id}) }}">detail</a></td>
                    </tr>

                {% endfor %}

            {% endif %}

            <tbody>
        </table>
    </div>


{% endblock %}

